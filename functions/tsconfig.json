{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "baseUrl": "./"
  },
  "compileOnSave": true,
  "include": ["src", "src/**/*.html"]
}
